<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :firstname %>
    <%= form.text_field :firstname, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :lastname %>
    <%= form.text_field :lastname, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, "Confirmation" %>
    <%= form.text_field :password_confirmation, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :mentor %>
    <%= form.check_box :mentor, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :mentee %>
    <%= form.check_box :mentee, class: 'mb-1 form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Create account" %>
  </div>
<% end %>
