<% provide(:title, 'Sign up') %>
<h1>Sign up for Brandeis Mentorship</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :first %>
      <%= f.text_field :first %>

      <%= f.label :last %>
      <%= f.text_field :last %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :major %>
      <%= f.text_field :major %>
<!--       <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>  %> -->

      <%= f.submit "Create my account", class: "btn btn-primary" %> 
    <% end %>
  </div>
</div>


