<%= form_with(model: mentee) do |form| %>
  <% if mentee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mentee.errors.count, "error") %> prohibited this mentee from being saved:</h2>

      <ul>
        <% mentee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :major %>
    <%= form.text_field :major, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :area_of_interest %>
    <%= form.text_field :area_of_interest, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :preffered_method_of_contact %>
    <%= form.text_field :preffered_method_of_contact, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :length_of_mentorship, "Length of mentorship desired" %>
    <%= form.integer :length_of_mentorship, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :graduation_year %>
    <%= form.string :graduation_year, class: 'mb-1 form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Create account" %>
  </div>
<% end %>
