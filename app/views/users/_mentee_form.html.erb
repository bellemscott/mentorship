<%= form_with(model: mentee) do |form| %>
  <% if mentee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mentee.errors.count, "error") %> prohibited this mentee from being saved:</h2>

      <ul>
        <% mentee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :major %>
    <%= form.select :major, options_for_select(@mentee.majors().values) %>
  </div>

  <div class="field">
    <%= form.label :area_of_interest %>
    <%= form.text_field :area_of_interest, class: 'mb-1 form-control' %>
  </div>

 <div class="field">
    <%= form.label :preferred_method_of_contact, "Preferred Method of Contact" %>
    <%= form.text_field :preferred_method_of_contact, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
  <%= form.label :location %>
  <%= form.select :location, options_for_select(CS.states(:us) )%>
</div>

   <div class="field">
    <%= form.label :length_of_mentorship, "Length of mentorship desired (in weeks)" %>
    <%= form.number_field :length_of_mentorship, class: 'mb-1 form-control' %>
  </div>

  <div class="field">
    <%= form.label :graduation_year %>
    <%= form.text_field :graduation_year, class: 'mb-1 form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Create account" %>
  </div>
<% end %>
