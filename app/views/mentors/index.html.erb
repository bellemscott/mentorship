<p id="notice"><%= notice %></p>

<h1>Mentors</h1>

<table>
  <thead>
    <tr>
      <th>Area of expertise</th>
      <th>Preferred method of contact</th>
      <th>School</th>
      <th>Current position</th>
      <th>Location</th>
      <th>Length of mentorship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.area_of_expertise %></td>
        <td><%= mentor.preferred_method_of_contact %></td>
        <td><%= mentor.school %></td>
        <td><%= mentor.current_position %></td>
        <td><%= mentor.location %></td>
        <td><%= mentor.length_of_mentorship %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

